<!--Main layout-->
<main class="mt-5 pt-4">
  <div class="container dark-grey-text mt-5">
    <!--Grid row-->
    <div class="row wow fadeIn">
      {{# each products }}
      {{# each this }}
      <!--Grid column-->
      <div class="col-md-6 mb-4">
        <img src="{{this.productImage}}" class="img-fluid" alt="">
      </div>
      <!--Grid column-->
      <!--Grid column-->
      <div class="col-md-6 mb-4">
        <!--Content-->
        <div class="p-4">
          <div class="mb-3">
            <a href="">
              <span class="badge purple mr-1">{{this.productCategory}}</span>
            </a>
            <a href="">
              <span class="badge blue mr-1">{{this.productStatus}}</span>
            </a>
            {{!-- <a href="">
              <span class="badge red mr-1">Bestseller</span>
            </a> --}}
          </div>
          <div class="mb-3">
            <p class="lead font-weight-bold">{{this.productName}}</p>
            <p>{{this.productDescription}}</p>
            <p class="lead">
              <span><strong>â‚¦</strong>{{this.productPrice}}</span>
            </p>
          </div>
        </div>
        <!--Content-->
      </div>
      <!--Grid column-->
      {{/each}}
      {{/each}}
      <div class="container">
        <div class="row float-right container">
          <p class="d-flex justify-content-left" style="margin-right: 7px;">
            <span style="text-transform: uppercase">
              <i class="fas fa-map-marker-alt" style="font-size: 30px;"></i>
              {{this.user.states}} State, {{this.user.lgas}} Local Govt
            </span>
          </p>
          <p class="d-flex justify-content-left">
            <a target="_blank"
              href="https://api.whatsapp.com/send?phone=234{{this.user.whatsappNumber}}&text=I%20saw%20your%20store%20on%20https://whogobuyam.com%20I%20am%20interested%20in%20your%20product."><i
                class="fab fa-whatsapp" style="color:#56c590;font-size: 30px;"></i></a>
          </p>
        </div>
      </div>
    </div>



    <hr>

    <!--Grid row-->
    <div class="row d-flex justify-content-center wow fadeIn">
      <div class="container">
        <!--Grid column-->
        <div class="col-md-6 text-center">
          <div class="row wow fadeIn">
            <h4 class="my-4 h4">About Store</h4>
            <span>
              {{this.user.aboutMe}}
              My Email address is {{this.user.email}}
            </span>
          </div>
        </div>
      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-6 text-center">
        <h4 class="my-4 h4">Additional Products</h4>
        <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p> -->
        <!--Grid row-->
        <div class="row wow fadeIn">
          {{# each recents }}
          {{# each this }}
          <!--Grid column-->
          <div class="col-lg-4 col-md-12 mb-4">
            <a href="/store/{{this.email}}/{{this._id}}">
              <img src="{{this.productImage}}" class="img-thumbnail img-fluid" alt="">
            </a>
            {{this.productName}}
          </div>
          <!--Grid column-->
          {{/each}}
          {{/each}}
        </div>
        <!--Grid row-->
      </div>
      <!--Grid column-->

    </div>
    <!--Grid row-->

    <hr>

